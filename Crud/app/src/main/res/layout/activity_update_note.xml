<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".UpdateNoteActivity">

<TextView
    android:id="@+id/editNoteHeading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="40dp"
    android:fontFamily="@font/poppins"
    android:text="Edit Note"
    android:textColor="@color/orange"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/updateSaveButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="208dp"
    android:layout_marginTop="48dp"
    app:layout_constraintStart_toEndOf="@+id/editNoteHeading"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/baseline_done_outline_24" />

<LinearLayout
    android:id="@+id/LinearForm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@+id/editNoteHeading"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/updateTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/poppins"
        android:hint="Edit the Title"
        android:padding="12dp"
        android:textSize="20dp"
        android:background="@drawable/orange_border"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/updateContentEditText"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:fontFamily="@font/poppins"
        android:hint="Edit the description"
        android:gravity="top"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:textSize="18dp"
        android:background="@drawable/orange_border" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>