<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentContainer"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gunungrinjani1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/img1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        android:text="Selamat Anda Berhasil Login"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold1"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="Hilangkan Hari-hari mu yang terasa berat kawan, hancurkan stress mu dengan berjalan-jalan!"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular1"
        android:padding="25dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonImplisitSplash"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:width="300dp"
        android:text="Share"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinssemibold1"
        android:background="@drawable/button_shape"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogoutSplash"
        android:layout_below="@+id/buttonImplisitSplash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:width="300dp"
        android:text="Logout"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinssemibold1"
        android:background="@drawable/button_shape"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonLogoutSplash"
        android:paddingHorizontal="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonWhiteFragment"
            android:layout_marginTop="20sp"
            android:width="150dp"
            android:text="White"
            android:textSize="15sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinssemibold1"
            android:background="@drawable/button_shape"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDarkFragment"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10dp"
            android:width="150dp"
            android:text="Dark"
            android:textSize="15sp"
            android:backgroundTint="@color/dark"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinssemibold1"
            android:background="@drawable/button_shape"
            />

    </LinearLayout>

</RelativeLayout>