<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle148a"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/cardlogin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk dulu ga sih!"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins1"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="wrap_content"
        android:layout_height="239dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/undraw_reminder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/titleImage"
        android:paddingHorizontal="60dp"
        android:id="@+id/formLogin">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:background="@drawable/button_shape"
            android:hint="Email"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/secondary_color"
            android:id="@+id/email"
            android:fontFamily="@font/poppinsregular1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:background="@drawable/button_shape"
            android:hint="Password"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/secondary_color"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:fontFamily="@font/poppinsregular1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:text="Lupa Password? "
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="@font/poppinslight1"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogin"
        android:layout_below="@+id/formLogin"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:text="Login"
        android:layout_marginTop="13sp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinssemibold1"
        android:background="@drawable/button_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/buttonLogin"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belun memiliki akun? "
            android:textSize="12sp"
            android:fontFamily="@font/poppinsregular1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textSize="12sp"
            android:fontFamily="@font/poppins1"
            android:textColor="@color/primary_color"
            android:id="@+id/registerText"/>

    </LinearLayout>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:visibility="gone"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>